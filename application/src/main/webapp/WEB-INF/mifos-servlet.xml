<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       classpath:xsd/spring-beans-2.5.xsd">

	<bean id="timeNow" class="org.joda.time.DateTime">
	</bean>
	
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
        	<list>
        		<value>messages</value>
				<value>errors</value>
        	</list>
        </property>
    </bean>

    <bean name="/" class="org.mifos.ui.core.controller.RedirectionController">
        <property name="viewToRedirectTo" value="index"/>
    </bean>

    <bean name="/index.ftl" class="org.mifos.ui.core.controller.RedirectionController">
        <property name="viewToRedirectTo" value="index"/>
    </bean>
    
    <bean name="/login.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/login2.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/accessDenied.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/languages.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/adminHome.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/clientsAndAccounts.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/createClient.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    <bean name="/createClientSuccess.ftl" class="org.mifos.ui.core.controller.GenericController"/>
    
    <bean name="/createLoanProduct.ftl" class="org.mifos.ui.loan.controller.LoanProductController">
        <property name="sessionForm"  value="true"/>
        <property name="commandName"  value="loanProduct"/>
        <property name="commandClass" value="org.mifos.ui.loan.command.LoanProductDTO"/>
        <property name="formView"     value="createLoanProduct"/>
        <property name="successView"  value="home.ftl"/>
        <property name="validator"    ref="beanValidator"/>
    </bean>

    <bean name="/home.ftl" class="org.mifos.ui.core.controller.GenericController"/>

    <bean name="/appInfo.ftl" class="org.mifos.ui.core.controller.AppInfoController">
        <property name="appInfo" ref="appInfo"/>
    </bean>

    <!-- freemarker config -->
	<bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
	  <property name="templateLoaderPath" value="/WEB-INF/freemarker/"/>
	  <property name="defaultEncoding" value="UTF-8" />
	  <property name="freemarkerVariables">
	     <map>
	        <entry key="xml_escape" value-ref="fmXmlEscape"/>
	     </map>
       </property>
	</bean>
	<bean id="fmXmlEscape" class="freemarker.template.utility.XmlEscape"/>
	
	<!-- 
	  View resolvers can also be configured with ResourceBundles or XML files. If you need
	  different view resolving based on Locale, you have to use the resource bundle resolver.
	-->
	<bean id="freemarkerViewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
	  <property name="cache" value="true"/>
	  <property name="prefix" value=""/>
	  <property name="suffix" value=".ftl"/>
	  <property name="contentType" value="text/html; charset=UTF-8" />
	  <!-- if you want to use the Spring FreeMarker macros, set this property to true -->
	  <property name="exposeSpringMacroHelpers" value="true"/>
	</bean>
	
	<bean id="beanValidator" class="org.springmodules.validation.bean.BeanValidator">
		<property name="configurationLoader" ref="configurationLoader"/>
	</bean>
	
	<bean id="configurationLoader" class="org.springmodules.validation.bean.conf.loader.annotation.AnnotationBeanValidationConfigurationLoader" />
	
</beans>
