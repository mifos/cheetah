<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- the application context definition for the springapp DispatcherServlet -->

	<bean id="timeNow" class="org.joda.time.DateTime">
	</bean>
	
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>

    <bean name="/" class="springapp.web.controllers.RedirectionController">
        <property name="viewToRedirectTo" value="index"/>
    </bean>

    <bean name="/index.ftl" class="springapp.web.controllers.RedirectionController">
        <property name="viewToRedirectTo" value="index"/>
    </bean>
    
    <bean name="/login.ftl" class="springapp.web.controllers.GenericController"/>
    <bean name="/accessDenied.ftl" class="springapp.web.controllers.GenericController"/>
    <bean name="/languages.ftl" class="springapp.web.controllers.GenericController"/>

    <bean name="/hello.ftl" class="springapp.web.controllers.InventoryController">
        <property name="productService" ref="productService"/>
    </bean>

    <bean name="/priceincrease.ftl" class="springapp.web.controllers.PriceIncreaseFormController">
        <property name="sessionForm" value="true"/>
        <property name="commandName" value="priceIncrease"/>
        <property name="commandClass" value="springapp.web.commands.PriceIncrease"/>
        <property name="validator">
            <bean class="springapp.web.commands.PriceIncreaseValidator"/>
        </property>
        <property name="formView" value="priceincrease"/>
        <property name="successView" value="hello.ftl"/>
        <property name="productService" ref="productService"/>
    </bean>
    
    <!-- freemarker config -->
	<bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
	  <property name="templateLoaderPath" value="/WEB-INF/freemarker/"/>
	  <property name="defaultEncoding" value="UTF-8" />
	  <property name="freemarkerVariables">
	     <map>
	        <entry key="xml_escape" value-ref="fmXmlEscape"/>
	     </map>
       </property>
	</bean>
	<bean id="fmXmlEscape" class="freemarker.template.utility.XmlEscape"/>
	
	<!-- 
	  View resolvers can also be configured with ResourceBundles or XML files. If you need
	  different view resolving based on Locale, you have to use the resource bundle resolver.
	-->
	<bean id="freemarkerViewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
	  <property name="cache" value="true"/>
	  <property name="prefix" value=""/>
	  <property name="suffix" value=".ftl"/>
	  <property name="contentType" value="text/html; charset=UTF-8" />
	  <!-- if you want to use the Spring FreeMarker macros, set this property to true -->
	  <property name="exposeSpringMacroHelpers" value="true"/>
	</bean>
	
</beans>
